<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titreDernier"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Dernier match "
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_marginTop="20dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/equipe_gauche_dernier"
                android:layout_width="79dp"
                android:layout_height="83dp"
                android:layout_weight="1"
                android:src="@mipmap/logo_club_round"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                tools:id="equipe_gauche_dernier"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/nom_equipe_gauche_dernier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="St Brice Courcelles"
                android:textAlignment="center"
                tools:id="nom_equipe_gauche_dernier" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titreDernier_dernier_match"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text=" Dernier match "
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_gauche_dernier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    tools:id="score_gauche_dernier" />

                <TextView
                    android:id="@+id/separation_dernier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/score_droit_dernier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/equipe_droite_dernier"
                android:layout_width="79dp"
                android:layout_height="83dp"
                android:src="@mipmap/logo_club_round"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp"
                tools:id="equipe_droite_dernier"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/nom_equipe_droit_dernier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:textAlignment="center"
                tools:id="nom_equipe_droite_dernier" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/date_dernier_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="24 Juillet 2018"
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>