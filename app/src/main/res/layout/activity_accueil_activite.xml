<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".AccueilActivite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/logo_club_layer" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/equipe_gauche"
            android:layout_width="79dp"
            android:layout_height="83dp"
            android:src="@mipmap/logo_club_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="214dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titreDernier"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text=" Dernier match "
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score_gauche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/separation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textAlignment="center"
                    android:textSize="24sp" />


                <TextView
                    android:id="@+id/score_droit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12"
                    android:textAlignment="center"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/equipe_droite"
            android:layout_width="74dp"
            android:layout_height="82dp"
            android:src="@mipmap/logo_club_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="214dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/equipe_prochain_gauche"
            android:layout_width="78dp"
            android:layout_height="84dp"
            android:src="@mipmap/logo_club_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="99dp" />

        <TextView
            android:id="@+id/separationTitre"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text=" Prochain match "
            android:textAlignment="center"
            android:textSize="15sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/equipe_prochain_droite"
            android:layout_width="77dp"
            android:layout_height="83dp"
            android:src="@mipmap/logo_club_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="99dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center">

        <Button
            android:id="@+id/partenaires"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Partenaires" />

        <Button
            android:id="@+id/equipes"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Equipes" />

        <Button
            android:id="@+id/articles"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Articles" />
    </LinearLayout>
</LinearLayout>